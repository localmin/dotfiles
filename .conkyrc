# --- Window Layout & Options --- #
#sudo apt-get install curl xsltproc#
use_xft yes
own_window yes
#own_window_colour brown
own_window_argb_visual yes
own_window_transparent yes
own_window_type normal
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes
#use_spacer right
alignment top_right
gap_x 20
gap_y 50

# --- Colours, Sizes, Fonts & Margins --- #
xftfont dejavu sans book:size=10
xftalpha 1
update_interval 1.0
minimum_size 600 1080
#maximum_width 600
default_color 98cd57 #1f2425
draw_outline no
default_outline_color 98cd57
stippled_borders 0
#border_margin 0
border_width 0
uppercase no
draw_shades no
override_utf8_locale yes


TEXT
${voffset 30}${goto 138} ${execi 5 cat /etc/issue | cut -c11-33;}
${goto 105} Kernel : $kernel ●
${goto 165} Uptime : $uptime_short
${goto 205} MB ${execi 60 sensors | grep "MB Temperature" | cut -c24-29;}


${goto 216} wlan0 ●
${goto 128} Local IP : ${addr wlan0}
${goto 107} MAC : ${wireless_ap wlan0}
${goto 108} SSID : ${wireless_essid wlan0}
${goto 188} Signal : ${wireless_link_qual_perc wlan0}%
${goto 100} Public IP : ${execi 14400 wget -q -O - checkip.dyndns.org|sed -e 's/.*Current IP Address: //' -e 's/<.*$//'}
${goto 158} Up Speed : ${upspeed wlan0}
${goto 145} Down Speed : ${downspeed wlan0}
${goto 177} Upload : ${totalup wlan0}
${goto 163} Download : ${totaldown wlan0}

${goto 231} SDA ●
${goto 171}${fs_used /}/ ${fs_size /}
${goto 241} SDB ●
${goto 257}${execi 10 netcat localhost 7634 | cut --delimiter '|' --fields 9}°C
${goto 193}${fs_used /home}/ ${fs_size /home}
${goto 255} SDC ●
${goto 271}${execi 10 netcat localhost 7634 | cut --delimiter '|' --fields 14}°C
#${fs_used /home}/ ${fs_size /home}
${goto 150} HDD Fan Speed : ${execi 60 sensors | grep "CHASSIS FAN 2 Speed" | cut -c22-29;}
${goto 432} ${voffset 190}CPU : ${execi 60 sensors | grep -A  0 "Core Temp" | cut -c24-29;}
${goto 436} CPU Fun Speed ${execi 60 sensors | grep "CPU FAN Speed" | cut -c22-29;}
${goto 440} CPU1: ${cpu cpu0}% CPU2: ${cpu cpu1}%
